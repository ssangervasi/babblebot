{
	"name": "babblebot",
	"description": "babblebot",
	"author": "Sebastian Sangervasi",
	"license": "Copyright (c) 2021 Sebastian Sangervasi",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssangervasi/babblebot.git"
	},
	"main": "dist/babblebot.js",
	"source": "src/babblebot.ts",
	"engines": {
		"node": "16.1.0",
		"npm": "7.13.0"
	},
	"scripts": {
		"build": "rm -rf dist/* && npm run gen && npm run build-node && npm run inject",
		"build-modern": "microbundle --target=node --format=modern",
		"build-node": "microbundle --target=node --format=cjs",
		"bin": "ts-node --project=./bin/tsconfig.json",
		"inject": "npm run bin bin/inject.ts",
		"csvToJson": "npm run bin bin/csvToJson.ts",
		"gen": "npm run csvToJson",
		"lint": "eslint --cache src/**/*.ts tests/**/*.ts bin/**/*.ts",
		"lint-fix": "eslint --fix --cache src/**/*.ts tests/**/*.ts bin/**/*.ts",
		"ndb": "ndb ./dist/cli.js",
		"shell": "ts-node",
		"jest": "jest --runTestsByPath",
		"jest-watch": "jest --watch --runTestsByPath",
		"test": "jest tests/*",
		"test-watch": "jest --watch tests/*",
		"watch": "tsc-watch"
	},
	"dependencies": {},
	"devDependencies": {
		"narrow-minded": "git+ssh://git@github.com:ssangervasi/narrow-minded.git#build",
		"gdevelop-refactor": "git+ssh://git@github.com:ssangervasi/gdevelop-refactor.git#build",
		"@types/json-stable-stringify": "^1.0.33",
		"json-stable-stringify": "^1.0.1",
		"uuid": "^8.3.2",
		"@babel/types": "^7.15.6",
		"@types/jest": "^24.9.1",
		"@types/lodash": "^4.14.172",
		"@types/node": "^12.20.19",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^4.0",
		"@typescript-eslint/parser": "^4.0",
		"acorn": "^7.4.1",
		"acorn-jsx": "^5.3.2",
		"csv-parse": "^4.16.0",
		"eslint": "^7.32",
		"jest": "^26.6.3",
		"jest-diff": "^26.6.2",
		"lodash": "^4.17.21",
		"microbundle": "^0.13.0",
		"ndb": "^1.1",
		"rimraf": "^2.7",
		"ts-jest": "^26.5.6",
		"ts-loader": "^6.2",
		"ts-node": "^8.10.2",
		"tsc-watch": "^2.4.0",
		"tsconfig-paths": "^3.10.1",
		"tslint": "^5.20.1",
		"typescript": "^4.4.2"
	}
}
