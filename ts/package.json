	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssangervasi/babblebot.git"
	},
	"main": "dist/babblebot.js",
	"source": "src/babblebot.ts",
	"engines": {
		"node": "16.1.0",
		"npm": "7.13.0"
	},
	"scripts": {
		"build": "rm -rf dist/* && npm run csvToScoreTable && npm run build-modern && npm run inject",
		"build-modern": "microbundle --target=node --format=modern",
		"bin": "ts-node --project=./bin/tsconfig.json",
		"inject": "npm run bin bin/inject.ts",
		"csvToScoreTable": "npm run bin bin/csvToScoreTable.ts",
		"lint": "eslint --fix --cache src/**",
		"ndb": "ndb ./dist/cli.js",
		"shell": "ts-node",
		"test": "jest tests/",
		"test-watch": "jest --watch tests/",
		"watch": "tsc-watch"
	},
	"dependencies": {
		"@types/json-stable-stringify": "^1.0.32",
		"json-stable-stringify": "^1.0.1"
	},
	"devDependencies": {
		"@babel/types": "^7.10",
		"@types/jest": "^24.9.1",
		"@types/lodash": "^4.14.168",
		"@types/node": "^12.12",
		"@typescript-eslint/eslint-plugin": "^2.34",
		"@typescript-eslint/parser": "^2.34",
		"acorn": "^7",
		"acorn-jsx": "^5",
		"csv-parse": "^4.15.3",
		"eslint": "^6.7",
		"jest": "^26.1.0",
		"jest-diff": "^26.1.0",
		"lodash": "^4.17.21",
		"microbundle": "^0.13.0",
		"ndb": "^1.1",
		"rimraf": "^2.7",
		"ts-jest": "^26.1",
		"ts-loader": "^6.2",
		"ts-node": "^8.10.2",
		"tsc-watch": "^2.4.0",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^5.20.1",
		"typescript": "^3.9.6"
	}
}
