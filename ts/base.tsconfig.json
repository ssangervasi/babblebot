{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@gnop/*": [
				"./src/*"
			]
		},

		// Syntax
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],

		// Output
		"outDir": "dist",

		// General
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES6"
	},
	"include": [
		"src"
	]
}